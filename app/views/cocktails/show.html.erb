<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
    <div>
      <% @cocktail.doses.each do |dose| %>
        <h3><%= dose.description %> | </h3>
      <% end %>
      <%# <%= link_to "Remove dose", dose_path(@cocktail.dose) %>
    </div>
    <div>
      <% @cocktail.ingredients.each do |ingredient| %>
        <h3> | <%= ingredient.name  %></h3>
      <% end %>
    </div>
  </div>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
</div>

